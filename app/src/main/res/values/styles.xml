<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TextButtonStyle">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="TextViewCharacterName">
        <item name="android:background">@color/textbackground</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/mario</item>
    </style>

    <style name="TextViewCharacterDescription">
        <item name="android:background">@color/mariodescription</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewCharacterHabilities">
        <item name="android:background">@color/marioabilities</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="DrawerMenuHeaderStyle">
        <item name="android:background">@color/drawermenuheader</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">30sp</item>

    </style>

    <style name="DrawerMenuStyle">
        <item name="android:background">@color/drawermenu</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">24sp</item>

    </style>

    <style name="DrawerMenuTextStyle">
        <item name="android:background">@color/drawermenu</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">24sp</item>

    </style>

    <style name="Theme.MyApp.Splash" parent="Theme.SplashScreen">
        <!-- Configuración del Splash Screen -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/mario_splash</item>
        <item name="android:windowSplashScreenAnimationDuration">3000</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/transparent</item>

        <!-- Fondo  -->
        <item name="android:windowSplashScreenBackground">@color/backgroud_splash</item>
    </style>

    <style name="styleswitch">
        <item name="android:background">@color/drawermenuheader</item>
    </style>

    <!-- Estilo para AlertDialog -->
    <style name="CustomAlertDialog" parent="ThemeOverlay.AppCompat.Light">
        <!-- Texto principal del diálogo -->
        <item name="android:textColorPrimary">@color/about</item>
        <item name="android:background">@color/about_background</item>
    </style>



</resources>